<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiaoyi.mapper.CouponUsageMapper">

    <resultMap id="BaseResultMap" type="com.jiaoyi.entity.CouponUsage">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="coupon_id" property="couponId" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="order_id" property="orderId" jdbcType="BIGINT"/>
        <result column="coupon_code" property="couponCode" jdbcType="VARCHAR"/>
        <result column="discount_amount" property="discountAmount" jdbcType="DECIMAL"/>
        <result column="used_time" property="usedTime" jdbcType="TIMESTAMP"/>
        <result column="order_amount" property="orderAmount" jdbcType="DECIMAL"/>
        <result column="actual_amount" property="actualAmount" jdbcType="DECIMAL"/>
        <result column="status" property="status" jdbcType="VARCHAR"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, coupon_id, user_id, order_id, coupon_code, discount_amount, used_time,
        order_amount, actual_amount, status, remark, create_time
    </sql>

    <insert id="insert" parameterType="com.jiaoyi.entity.CouponUsage" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO coupon_usage (
            coupon_id, user_id, order_id, coupon_code, discount_amount, used_time,
            order_amount, actual_amount, status, remark, create_time
        ) VALUES (
            #{couponId}, #{userId}, #{orderId}, #{couponCode}, #{discountAmount}, #{usedTime},
            #{orderAmount}, #{actualAmount}, #{status}, #{remark}, #{createTime}
        )
    </insert>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM coupon_usage
        WHERE id = #{id}
    </select>

    <select id="selectByOrderId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM coupon_usage
        WHERE order_id = #{orderId}
    </select>

    <select id="selectByUserId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM coupon_usage
        WHERE user_id = #{userId}
        ORDER BY used_time DESC
    </select>

    <select id="selectByCouponId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM coupon_usage
        WHERE coupon_id = #{couponId}
        ORDER BY used_time DESC
    </select>

    <update id="updateStatus">
        UPDATE coupon_usage
        SET status = #{status}
        WHERE id = #{id}
    </update>

    <select id="countByUserIdAndCouponId" resultType="int">
        SELECT COUNT(*)
        FROM coupon_usage
        WHERE user_id = #{userId}
        AND coupon_id = #{couponId}
    </select>

</mapper>
