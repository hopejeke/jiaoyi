<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiaoyi.mapper.ProductMapper">

    <!-- 结果映射 -->
    <resultMap id="ProductResultMap" type="com.jiaoyi.entity.Product">
        <id column="id" property="id"/>
        <result column="product_name" property="productName"/>
        <result column="description" property="description"/>
        <result column="unit_price" property="unitPrice"/>
        <result column="product_image" property="productImage"/>
        <result column="category" property="category"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 插入商品 -->
    <insert id="insert" parameterType="com.jiaoyi.entity.Product" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO products (
            product_name, description, unit_price, product_image, category, status,
            create_time, update_time
        ) VALUES (
            #{productName}, #{description}, #{unitPrice}, #{productImage}, #{category}, #{status},
            #{createTime}, #{updateTime}
        )
    </insert>

    <!-- 更新商品 -->
    <update id="update" parameterType="com.jiaoyi.entity.Product">
        UPDATE products SET
            product_name = #{productName},
            description = #{description},
            unit_price = #{unitPrice},
            product_image = #{productImage},
            category = #{category},
            status = #{status},
            update_time = #{updateTime}
        WHERE id = #{id}
    </update>

    <!-- 根据ID查询商品 -->
    <select id="selectById" parameterType="long" resultMap="ProductResultMap">
        SELECT * FROM products WHERE id = #{id}
    </select>

    <!-- 查询所有商品 -->
    <select id="selectAll" resultMap="ProductResultMap">
        SELECT * FROM products ORDER BY create_time DESC
    </select>

    <!-- 根据状态查询商品 -->
    <select id="selectByStatus" parameterType="com.jiaoyi.entity.Product$ProductStatus" resultMap="ProductResultMap">
        SELECT * FROM products WHERE status = #{status} ORDER BY create_time DESC
    </select>

    <!-- 根据分类查询商品 -->
    <select id="selectByCategory" parameterType="string" resultMap="ProductResultMap">
        SELECT * FROM products WHERE category = #{category} ORDER BY create_time DESC
    </select>

    <!-- 根据商品名称模糊查询 -->
    <select id="selectByNameLike" parameterType="string" resultMap="ProductResultMap">
        SELECT * FROM products 
        WHERE product_name LIKE CONCAT('%', #{name}, '%') 
        ORDER BY create_time DESC
    </select>


    <!-- 统计商品总数 -->
    <select id="countAll" resultType="int">
        SELECT COUNT(*) FROM products
    </select>

    <!-- 分页查询商品 -->
    <select id="selectByPage" resultMap="ProductResultMap">
        SELECT * FROM products 
        ORDER BY create_time DESC 
        LIMIT #{offset}, #{limit}
    </select>

    <!-- 根据ID删除商品 -->
    <delete id="deleteById" parameterType="long">
        DELETE FROM products WHERE id = #{id}
    </delete>

</mapper>
